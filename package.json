{
  "name": "re-qwq",
  "private": true,
  "version": "1.0.8",
  "main": "./src-electron/main.js",
  "scripts": {
    "install": "cmake-js compile",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/2876225417/QwQEditor.git"
  },
  "build": {
    "files": [
      "build/Release/myaddon.node",
      "src/**/*",
      "dist/**/*",
      "main.js",
      "node_modules/**/*",
      "src-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "build/Release/myaddon.node",
        "to": "build/Release/myaddon.node"
      },
      {
        "from": "dist/pdfjs",
        "to": "pdfjs"
      }
    ],
    "productName": "qwqEditor re-Vue",
    "appId": "revue-qwq",
    "copyright": "ppqwqqq Â© 2024",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ElectronDeskTopTool"
    },
    "win": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    },
    "linux": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "2876225417",
    "repo": "QwQEditor",
    "releaseType": "release"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.7",
    "canvas": "^3.0.0-rc2",
    "cmake-js": "^7.3.0",
    "electron-store": "^10.0.0",
    "highlight.js": "^11.10.0",
    "md-editor-v3": "^4.21.2",
    "nan": "^2.22.0",
    "node-addon-api": "^8.2.1",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^4.7.76",
    "vue": "^3.5.12",
    "vue-electron-folder": "^1.0.3",
    "vue-meditor": "^2.1.2",
    "vue-router": "^4.4.5",
    "vuex": "^4.1.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "less": "^4.2.0",
    "node-gyp": "10.2.0",
    "sass": "^1.80.6",
    "sass-loader": "^16.0.3",
    "stylus": "^0.64.0",
    "vite": "^5.4.9",
    "vite-plugin-electron": "^0.28.8",
    "vue-i18n": "^9.0.0",
    "vuetify": "^3.7.0"
  }
}
